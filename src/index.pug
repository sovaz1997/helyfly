- const imgPath = './assets/img'

mixin logo(mix_class)
  img(src=`${imgPath}/logo.svg`, class=mix_class).logo


mixin advantage(advantage_img, advantage_description, mix_class)
  li.advantage(class=mix_class)
    img(src=advantage_img).advantage__img
    span.advantage__description= advantage_description

mixin stars(count, mix_class)
  ul(class=mix_class).stars
    - for(let i = 0; i < 5; i++)
      if i < count
        li.stars__item.stars__item--active
      else
        li.stars__item.stars__item--no-active

mixin shedule_item(from, to, cost, left_places, mix_class)
  div(class=mix_class).shedule-item
    span.shedule-item__info #{from} - #{to}
    span.shedule-item__info <strong>#{cost}$</strong>
    span.shedule-item__info Осталось &mdash; #{left_places}
    button.button.shedule-item__chose-button Выбрать

mixin many_stars(mix_class)
  hr.line
  img(src=`${imgPath}/many-stars.svg`).many-stars__image
  span.many-start__description
  +stars(5, "many-stars__stars")
  hr.line

mixin social(mix_class)
  .social
    .social__item.social__item--vk
      a(href="#").social__link
    .social__item.social__item--fb
      a(href="#").social__link
    .social__item.social__item--insta
      a(href="#").social__link

mixin payment_options(mix_class)
  .payment-options
    .payment-option.payment-option--mc
      a(href="#").payment-option__link
    .payment-option.payment-option--visa
      a(href="#").payment-option__link

mixin review(name, profession, photo, date, starsCount, starsDescription, message)
  .review
    |
    |
    img(src=photo, alt="").review__image
    |
    |
    span.review__name= name
    |
    |
    span.review__profession= profession
    |
    |
    +stars(5, "review__stars")
    |
    |
    span.review__message= message
    |
    |
    span.date= date

mixin photographer(mix_class, isHorizontal, showmore_text)
  .photographer(class=`${mix_class} ${isHorizontal ? "photographer--horizontal" : "photographer--vertical"}`)
    |
    |
    img(src=`${imgPath}/photographer.png`).photographer__image
    
    .photographer__wrapper
      .photographer__name Фотограф
      .photographer__name Марина Иванова
      |
      |
      a.photographer__more= showmore_text

mixin slider_item(number, name, description)
  li.slider-item
    |
    |
    span.slider-item__number= number
    |
    |
    span.slider-item__name <strong>#{name}</strong>
    |
    |
    span.slider-item__description= description

